                                        </li>
                                       
                                    </ul>
                                </div>
                            </li>
                            <li class="sidebar-dropdown">
                                <a href="#">
                                    <i class="fas fa-book-reader"></i>
                                    <span class="menu-text">Suspect Details</span>
                                </a>
                                <div class="sidebar-submenu">
                                    <ul>
                                        <li>
                                            <a href="@Url.Action("AddSuspect","Suspect")">Add Suspect Detals</a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("searchSuspect","Suspect")">Search Suspects</a>
                                        </li>
                                        
                                    </ul>
                                </div>
                            </li>
                            <li class="sidebar-dropdown">
                                <a href="#">
